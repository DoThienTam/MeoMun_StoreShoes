@model WebShoe.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<body>
  
    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <form action="@Url.Action("AddtoCart","GioHangs")" method="post">
                        <input type="hidden" name="productid" value="@Model.MaSP" />
                        <div class="preview col-md-6">
                            <div class="preview-pic tab-content">
                                <div class="tab-pane active" id="pic-1">
                                    <img src="~/images/@Model.ImagePath" width=300 />
                                </div>
                            </div>
                        </div>
                        <div class="details col-md-6">
                            <h3 class="product-title">Tên sản phẩm: @Model.TenSP</h3>
                        </div>
                        <p class="product-description">Mô tả sản phẩm: @Model.MoTa</p>
                        <h4 class="price">Giá bán: @Model.DonGia VNĐ</h4>
                        <h5 class="sizes">
                            Số lượng:
                            <input type="number" name="soluong" value="1" min="1" max="99" />
                        </h5>
                        <div class="button-cart">
                           
                            <input type="submit" class="button" value="Thêm vào giỏ hàng" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>