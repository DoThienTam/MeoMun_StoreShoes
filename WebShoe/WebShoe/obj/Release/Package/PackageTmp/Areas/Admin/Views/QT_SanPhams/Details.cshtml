@model WebShoe.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Chi tiết sản phẩm: @Model.TenSP</h2>
<hr />
<p style="font-size: 1.5rem">
    @Html.ActionLink("Quay lại quản lý sản phẩm", "Index") | @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaSP })
</p>
<div style="font-size: 1.1rem">
    <dl class="dl-horizontal">

        <dt>Hình ảnh</dt>
        <dd>
            @Html.DisplayFor(model => model.ImagePath)
        </dd>

        <dt>Tên sản phẩm</dt>
        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>Nhãn hiệu</dt>
        <dd>
            @Html.DisplayFor(model => model.LoaiSanPham.TenLoaiSP)
        </dd>

        <dt>Số lượng</dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>Kích cỡ</dt>
        <dd>
            @Html.DisplayFor(model => model.SIZE)
        </dd>

        <dt>Đơn giá</dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia)
        </dd>

        <dt>Mô tả</dt>
        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>
    </dl>
</div>
